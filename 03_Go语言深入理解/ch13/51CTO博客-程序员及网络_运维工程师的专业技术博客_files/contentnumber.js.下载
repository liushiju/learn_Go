function getWriteContent(content){
    var reg = /<\/?.+?\/?>/g;
    var label = content.replace(reg, "");
    var code = HTMLDeCode(label);
    var kong = code.replace(/(\&nbsp\;| |\s|\xc2\xa0|)/g, "");
    var num = kong.replace(/[^\x00-\xff]/g, "aa").length;
    return (num + (num % 2)) / 2
}
// html代码中字符替换
function HTMLDeCode(str) {
    var s = "";
    if (str.length == 0) return "";
    s = str.replace(/&amp;/g, "&");
    s = s.replace(/&lt;/g, " <");
    s = s.replace(/&gt;/g, ">");
    s = s.replace(/&nbsp;/g, "  ");
    s = s.replace(/'/g, "'");
    s = s.replace(/&quot;/g, '"');
    s = s.replace(/ <br>/g, "\n");
    return s;
}

// 底部字数统计
function changeNum(num){
    $('.current-num').text(num)
}